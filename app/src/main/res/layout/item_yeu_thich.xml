<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        app:cardCornerRadius="40dp">


        <ImageView
            android:id="@+id/imgManga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_img"
            android:scaleType="centerCrop"
            android:src="@drawable/imgmanga"
            tools:ignore="ContentDescription" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvUnNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:drawableStart="@drawable/ic_notif"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Đã đặt lịch"
                android:textColor="#23A903"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:drawableStart="@drawable/ic_notif"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Chưa đặt lịch"
                android:textColor="#23A903"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:drawableStart="@drawable/ic_delete"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Bỏ yêu thích"
                android:textColor="#E82822"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvUnFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:drawableStart="@drawable/ic_fav"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Yêu thích"
                android:textColor="#E82822"
                android:textSize="10sp" />

        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tvMangaName"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Trọn bộ Doraemon"
        android:textColor="@color/black" />


</LinearLayout>