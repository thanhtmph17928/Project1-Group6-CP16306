<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgManga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_img"
                android:scaleType="centerCrop"
                android:src="@drawable/imgmanga"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tvUnFav"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:drawableStart="@drawable/ic_fav"
                    android:gravity="center"
                    android:maxLines="1"

                    android:singleLine="true"
                    android:text=""
                    android:textColor="#E82822" />

                <TextView
                    android:id="@+id/tvFav"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:drawableStart="@drawable/ic_unfav"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#E82822"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvMangaName"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Trọn bộ Doraemon"
        android:textColor="@color/black" />


</LinearLayout>