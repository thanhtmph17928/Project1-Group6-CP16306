<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context=".Fragment.InfoMangaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAnh"
            android:layout_width="164dp"
            android:layout_height="166dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvTieuDe"
                android:layout_width="204dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvNguon"
                android:layout_width="204dp"
                android:textColor="@color/black"
                android:layout_height="22dp" />


            <Button
                android:id="@+id/btnYeuThich"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Yêu thích"
                android:backgroundTint="#019AE8"/>

            <Button
                android:id="@+id/btnDatLich"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Đặt lịch hẹn"
                android:backgroundTint="#019AE8"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvTen"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tvTacGia"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tvTheLoai"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tvSoChap"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="17dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvChap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

</LinearLayout>